<div class="flex w-full h-screen text-black" style="background-image: url('https://images.unsplash.com/photo-1593062096033-9a26b09da705?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8cHJvZHVjdGl2ZXxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=500&q=60'); background-position: center; background-size:cover">
  <section class="mx-auto bg-white flex flex-col gap-4 justify-center px-10" style="transform: skewX(-6deg); box-shadow: 15px 0 50px black">
    <section class="my-auto">
      <div style="transform: skewX(6deg);">
        <h2 class="text-4xl font-bold my-2">Welcome back!</h2>
        <p class="text-gray-600">There is more to be done today.</p>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field my-5" style="transform: skewX(6deg);">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-none shadow-inner", placeholder: 'Email here..', required: true %>
        </div>
        <div class="field my-5" style="transform: skewX(6deg);">
          <%= f.password_field :password, autocomplete: "current-password", class: "border-none shadow-inner", placeholder: 'Password..', required: true %>
        </div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "mx-auto",  style: "transform: skewX(6deg);" %><br />
        <% end %>
        <div class="actions">
          <%= f.submit 'SIGN IN', class: "bg-gradient-to-r from-[#8075F7] to-[#5CA7FC] w-full py-3 mt-10 rounded-md text-white cursor-pointer" %>
        </div>
      <% end %>
    </section>
    <div class="mb-5 flex items-center gap-2" style="transform: skewX(6deg);">
      <span>A new user?</span><%= link_to 'Sign up', new_user_registration_path, method: :get, class: "text-blue-500" %><span> here</span>
    </div>
  </section>
</div>
