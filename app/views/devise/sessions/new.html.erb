<div class="flex w-full h-screen " style="background-image: url('https://images.unsplash.com/photo-1658053283477-b985256569bc?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80'); background-position: center; background-size:cover">
  <section class="bg-gradient-to-r from-black to-transparent flex flex-col gap-4 justify-center w-full px-10 md:px-32">
    <section class="my-auto">
      <div class="mb-10 form-element">
        <h2 class="text-4xl font-bold my-2">Welcome back!</h2>
        <p class="text-gray-400">There is more to be done today.</p>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'text-black' }) do |f| %>
        <div class="field my-5 form-element">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-none shadow-inner bg-gray-100 rounded-md", placeholder: 'Email here..', required: true %>
        </div>
        <div class="field my-5 form-element">
          <%= f.password_field :password, autocomplete: "current-password", class: "border-none shadow-inner bg-gray-100 rounded-md", placeholder: 'Password..', required: true %>
        </div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_user_password_path, class: "mx-auto text-gray-300", data: { turbo_stream: true} %><br />
        <% end %>
        <div class="actions">
          <%= f.submit 'SIGN IN', class: "bg-gradient-to-r from-[#8075F7] to-[#5CA7FC] w-max px-10 py-3 mt-10 rounded-md text-white cursor-pointer" %>
        </div>
      <% end %>
    </section>
    <div class="mb-5 flex items-center gap-2 form-element">
      <span>A new user?</span><%= link_to 'Sign up', new_user_registration_path, method: :get, class: "text-blue-500", data: { turbo_stream: true} %><span> here</span>
    </div>
  </section>
</div>
