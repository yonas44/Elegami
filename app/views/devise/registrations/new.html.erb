<div class="flex w-full h-screen bg-white text-black">
  <div class="flex-1 bg-gray-500"></div>
  <section class="mx-auto flex flex-col gap-4 justify-center w-full md:w-2/5 px-10">
    <section class="my-auto">
      <div>
        <h2 class="text-4xl font-bold my-2">Welcome Stranger!</h2>
        <p class="text-gray-600">Let's help you set up</p>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field my-5">
          <%= f.text_field :full_name, autofocus: true, class: "border-none shadow-inner", placeholder: 'Full name here..', required: true %>
        </div>
        <div class="field my-5">
          <%= f.email_field :email, autofocus: true, class: "border-none shadow-inner", placeholder: 'Email here..', required: true %>
        </div>
        <div class="field my-5">
          <%= f.password_field :password, class: "border-none shadow-inner", placeholder: 'Password..', required: true %>
        </div>
        <div class="actions">
          <%= f.submit "SIGN UP", class: "bg-gradient-to-r from-[#8075F7] to-[#5CA7FC] w-full py-3 mt-10 rounded-md text-white cursor-pointer" %>
        </div>
      <% end %>
    </section>
    <div class="mb-5 flex items-center gap-2">
      <span>Already a user?</span><%= link_to 'Login', user_session_path, method: :get, class: "text-blue-500" %><span> here</span>
    </div>
  </section>
</div>
