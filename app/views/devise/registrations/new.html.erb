<div class="flex w-full h-screen " style="background-image: url('https://images.unsplash.com/photo-1658053283477-b985256569bc?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80'); background-position: center; background-size:cover">
  <section class="bg-gradient-to-r from-black to-transparent flex flex-col gap-4 justify-center w-full px-10 md:px-32">
    <section class="my-auto">
      <div class="mb-10">
        <h2 class="text-4xl font-bold my-2">Welcome Stranger!</h2>
        <p class="text-gray-400">Let's help you set up</p>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field my-5">
          <%= f.text_field :full_name, autofocus: true, class: "border-none shadow-inner bg-gray-100 rounded-md", placeholder: 'Full name here..', required: true %>
        </div>
        <div class="field my-5">
          <%= f.email_field :email, autofocus: true, class: "border-none shadow-inner bg-gray-100 rounded-md", placeholder: 'Email here..', required: true %>
        </div>
        <div class="field my-5">
          <%= f.password_field :password, class: "border-none shadow-inner bg-gray-100 rounded-md", placeholder: 'Password..', required: true %>
        </div>
        <div class="actions">
          <%= f.submit "SIGN UP", class: "w-max px-10 bg-gradient-to-r from-[#8075F7] to-[#5CA7FC] w-full py-3 mt-10 rounded-md text-white cursor-pointer" %>
        </div>
      <% end %>
    </section>
    <div class="mb-5 flex items-center gap-2">
      <span>Already a user?</span><%= link_to 'Login', user_session_path, method: :get, class: "text-blue-500" %><span> here</span>
    </div>
  </section>
</div>
