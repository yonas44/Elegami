<div class="my-5 hidden flex-col w-full gap-2 items-center" data-project-target="milestoneWindow" data-name="completed" id="completed_tasks_container">
  <div class="w-full divide-y divide-gray-200">
    <div class="flex flex-col gap-3" id="compeleted_tasks_container">
      <header class="flex gap-2 w-full bg-gray-50">
        <span class="p-2 text-left text-xs font-medium w-5 text-gray-500 uppercase tracking-wider col-span-1"></span>
        <div class="grid grid-cols-12 flex-1">
          <span class="p-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider col-span-4">Task</span>
          <span class="p-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider col-span-2">Team</span>
          <span class="p-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider col-span-2">Priority</span>
          <span class="p-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider col-span-3">Completed_date</span>
          <span class="p-3 text-xs font-medium text-gray-500 uppercase tracking-wider col-span-1"></span>
        </div>
      </header>
      <% if tasks.count > 0 %>
        <ul class="flex flex-col max-h-[150px] w-full overflow-auto">
          <% tasks.each_with_index do |task, index| %>
            <%= render 'partials/tasks/single_completed_task', task: task, index: index + 1 %>
          <% end %>
        </ul>
      <% else %>
        <p class="italic text-gray-500 text-center text-sm w-full my-5">There are no completed tasks yet
          <p>
          <% end %>
        </div>
      </div>
    </div>
