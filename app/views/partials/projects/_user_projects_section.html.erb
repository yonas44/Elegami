<section class="flex gap-2 flex-col" data-project-target="category" data-name="projects">
  <div class="flex justify-between lg:grid grid-cols-2 items-center">
    <ul class="col-span-1 flex-1 flex justify-around p-2 my-3">
      <li><button class="border-b border-white" data-project-target="projectType" data-action="project#handleProjectTypeSwitch">All</button></li>
      <li><button class="text-gray-500" data-project-target="projectType" data-action="project#handleProjectTypeSwitch">Inprogress</button></li>
      <li><button class="text-gray-500" data-project-target="projectType" data-action="project#handleProjectTypeSwitch">Completed</button></li>
    </ul>
    <div class="col-span-1 px-4 h-max py-4 w-fit rounded-3xl cursor-pointer bg-white/30 flex items-center gap-2" data-action="click->project#toggleOn">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      <span class="hidden md:block">Create Project</span>
    </div>
  </div>
  <div class="flex gap-5 items-center">
    <label for="search" class="relative px-1 w-full max-w-md">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white absolute inset-0 my-auto left-3">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
      </svg>
      <input type="text" id="search" class="rounded-2xl bg-[#393D53] text-white p-3 pl-14 w-full border-none" data-action="input->project#handleSearch" placeholder="Search text or project..." />
    </label>
  </div>
  <% if projects.count> 0 %>
    <ul class="my-5 overflow-auto flex flex-wrap gap-10" id="projects_list">
      <% projects.each do |project_user| %>
        <li data-project-target="filterable" data-key="<%= project_user.project.title %>">
          <%= render 'partials/projects/single_project', project: project_user.project %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="m-5">There are no projects to display</div>
  <% end %>
</section>
