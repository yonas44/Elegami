<div class="fixed z-10 inset-0 items-center justify-center bg-black bg-opacity-50 transition-opacity duration-300 hidden" data-project-target="milestoneModal">
  <!-- Modal Content -->
  <div class="bg-white rounded-lg shadow-lg p-4 w-full relative z-20 max-w-md">
    <h2 class="text-lg font-semibold text-black mb-4">Let's add a milestone!</h2>
    <%= form_for(new_milestone, url: milestones_path(project_id: project.id), data: { action: "turbo:submit-end->project#milestoneModalToggle", project_target: "form" }) do |f| %>
      <%= f.hidden_field :project_id, value: project.id %>
      <div class="field my-5">
        <%= f.text_field :title, autofocus: true, class: "border-none shadow-inner", placeholder: 'Title here..' %>
      </div>
      <div class="flex gap-5">
        <div class="w-1/2 flex flex-col mb-4">
          <label class="text-gray-500">Start Date</label>
          <%= f.date_field :start_date, class: "border-none bg-transparent", autofocus: true, min: Date.current %>
        </div>
        <div class="w-1/2 flex flex-col mb-4">
          <label class="text-gray-500">Due Date</label>
          <%= f.date_field :due_date, class: "border-none bg-transparent", autofocus: true %>
        </div>
      </div>
      <div class="actions flex gap-3 items-center">
        <%= f.submit "Create", class: "bg-green-500 text-white px-3 py-1 rounded-md" %>
        <button data-action="project#milestoneModalToggle" type="button">Cancel</button>
      </div>
    <% end %>
  </div>
</div>
