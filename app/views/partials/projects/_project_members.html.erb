<div class="my-5 hidden flex-col px-6 py-3 gap-2 items-center" data-project-target="projectWindow" data-name="members">
  <div class="flex justify-between w-full mb-5 gap-5">
    <label for="search" class="relative px-1 flex-1">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 absolute inset-0 my-auto left-3">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
      </svg>
      <input type="text" id="search" class="rounded-2xl bg-gray-200 p-3 pl-14 w-full border-none" data-action="input->members#handleSearch" placeholder="Search users..." />
    </label>
    <button class="flex items-center gap-2 bg-green-500 text-white rounded-lg py-2 px-3 w-fit my-auto" data-action="project#memberModalToggle">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
      </svg>
      <span>Add member</span>
    </button>
  </div>
  <div class="w-full divide-y divide-gray-200">
    <div id="tasks_container">
      <header class="grid grid-cols-12 bg-gray-50">
        <span class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider col-span-1"></span>
        <span class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider col-span-4">Member</span>
        <span class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider col-span-2">Role</span>
        <span class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider col-span-3">Profession</span>
        <span class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider col-span-2"></span>
      </header>
      <div id="project_members_container">
        <%= render 'partials/projects/project_members_list', members: members %>
      </div>
    </div>
  </div>
