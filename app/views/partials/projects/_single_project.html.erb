<div>
  <div class="bg-white text-black w-80 h-48 rounded-md flex flex-col justify-between p-7">
    <section class="flex justify-between items-center">
      <h3 class="text-2xl capitalize"><%= project.title %></h3>
      <%= button_to project_path(project), method: :get, remote: true do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
        </svg>
      <% end %>
    </section>
    <p class="text-gray-500"><%= project.description.truncate(80, omission: '...') %></p>
    <section class="flex justify-between">
      <span>Last Updated on <%= project.updated_at&.strftime('%b %d, %Y') %></span>
    </section>
  </div>
</div>
