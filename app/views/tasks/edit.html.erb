<turbo-frame id="<%= @task.id %>">
  <%= form_for(@task, url: task_path(@task), method: :patch) do |f| %>
    <li class="grid grid-cols-12 text-sm text-gray-900">
      <div class="px-6 py-3 col-span-1">-</div>
      <div class="col-span-3 whitespace-nowrap relative flex p-1 items-center overflow-auto">
        <%= f.text_area :description, autofocus: true, class: "text-xs w-full p-2 border-none", placeholder: 'Description here..' %>
      </div>
      <div class="px-6 py-3 col-span-2">
        <button type="button" data-action="project#taskMemberModalToggle">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
          </svg>
        </button>
        <%= render 'partials/tasks/project_users_modal' %>
      </div>
      <%= f.select :priority, [["High", "High"], ["Medium", "Medium"], ["Low", "Low"]], {}, { class: "italic text-md border-none bg-transparent px-5 pr-10 col-span-2", autofocus: true } %>
      <div class="px-6 py-3 col-span-2"><%= @task.status %></div>
      <div class="px-6 py-3 text-sm col-span-2 text-gray-900 flex justify-center gap-5 items-center">
        <%= button_tag type: 'submit' do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#008000" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
          </svg>
        <% end %>
      </div>
    </li>
  <% end %>
</turbo-frame>
