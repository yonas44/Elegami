<turbo-frame id="<%= @project.id %>">
  <%= form_for(@project, url: project_path(@project), method: :patch) do |f| %>
    <div class="pr-6 flex gap-4 justify-between">
      <section class="flex-1">
        <div class="mb-4">
          <label class="text-gray-500 block">Title</label>
          <%= f.text_field :title, autofocus: true, class: "border-none bg-transparent text-black text-2xl font-semibold", placeholder: 'Title here..' %>
        </div>
        <div class="mb-4">
          <label class="text-gray-500 block">Description</label>
          <%= f.text_area :description, autofocus: true, class: "border-none bg-transparent text-black p-2 font-semibold", placeholder: 'Description here..' %>
        </div>
      </section>
      <section class="flex-1">
        <div class="flex justify-between">
          <div class="w-1/2 mb-4">
            <label class="text-gray-500">Start Date</label>
            <%= f.date_field :start_date, class: "border-none bg-transparent", autofocus: true %>
          </div>
        </div>
        <div class="flex justify-between">
          <div class="w-1/2 mb-4">
            <label class="text-gray-500">Due Date</label>
            <%= f.date_field :due_date, class: "border-none bg-transparent", autofocus: true %>
          </div>
        </div>
        <div class="w-1/2">
          <label class="text-gray-500">Privacy</label>
          <%= f.select :public, [["Public", true], ["Private", false]], {}, { class: "text-green-500 italic text-md border-none bg-transparent px-2 pr-10", autofocus: true } %>
        </div>
      </section>
    </div>
    <div class="actions flex gap-5 mt-5 items-center">
      <%= button_tag type: 'submit', class: "flex gap-2 items-center px-3 py-2 rounded-md bg-green-500 text-white" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>Update</span>
      <% end %>
    </a>
  </div>
<% end %>
</turbo-frame>
