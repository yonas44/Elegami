<section class="w-full md:w-5/6 mx-auto py-10 text-black flex flex-col lg:flex-row gap-5">
  <aside class="lg:w-2/3 flex flex-col gap-10">
    <section class="rounded-2xl overflow-hidden h-[500px] w-full">
      <div id="cover_picture" class="bg-gray-500 h-1/2 w-full"></div>
      <div id="user_info" class="bg-white text-black flex h-1/2 w-full">
        <div class="relative w-1/3 h-full ">
          <div class="absolute inset-0 mx-auto w-2/3 -top-1/2 aspect-1 overflow-hidden border-5 border-white rounded-full flex bg-gray-300">
            <img src="https://avatars.githubusercontent.com/u/72081991?v=4" alt="profile_pic" class="object-cover" />
          </div>
        </div>
        <div class="flex flex-col my-4 gap-4">
          <h2 class="text-3xl font-semibold">Yonas Tesfu</h2>
          <p class="text-gray-500">VP of customer operations</p>
          <p class="font-semibold text-xs p-2 rounded-lg w-fit bg-[#F7F7FA]">Addis Ababa, Ethiopia</p>
        </div>
      </div>
    </section>
    <section class="flex flex-col gap-10" data-controller="profile">
      <nav class="flex justify-between bg-[#F7F7FC] rounded-lg p-2">
        <button class="py-2 px-3 rounded-lg text-gray-500" data-profile-target="navBtn" data-action="profile#handleProfileNav">Overview</button>
        <button class="py-2 px-3 rounded-lg text-gray-500" data-profile-target="navBtn" data-action="profile#handleProfileNav">Groups</button>
        <button class="py-2 px-3 rounded-lg text-gray-500" data-profile-target="navBtn" data-action="profile#handleProfileNav">Projects</button>
        <button class="py-2 px-3 rounded-lg text-gray-500" data-profile-target="navBtn" data-action="profile#handleProfileNav">Tasks</button>
      </nav>
      <div class="rounded-2xl bg-white p-5">
        <%= render '/partials/users/overview' %>
        <%= render '/partials/users/groups' %>
        <%= render '/partials/users/projects' %>
        <%= render '/partials/users/tasks' %>
      </div>
    </section>
  </aside>
  <aside class="flex-1">
    <section class="bg-white p-5 rounded-2xl">
      <h3 class="font-semibold text-lg">Additional Details</h3>
      <ul>
        <li>Email</li>
        <li>Language</li>
        <li>Education</li>
      </ul>
    </section>
  </aside>
</section>
